<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/round_corners_white"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:gravity="center"
   >
    <LinearLayout
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart_nav"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="Juma Shop"
                android:textColor="@android:color/black"
                />

            <TextView
                android:layout_below="@id/name"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="02747478"
                android:textSize="11sp"
                android:textColor="@color/midd_grey"
                />

            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:id="@+id/customer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="Mikocheni"
                android:textColor="@color/colorPrimaryDark"
                />
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/light_grey" />



</RelativeLayout>



