<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="0dp"
    >

    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="upo,"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caslte light"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/view_user_account_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_account_circle_blue_24dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/round_corners_with_grey_bg"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/round_corners_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/product_img"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/beefeater"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_marginTop="30sp"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TZS12,340"/>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/product_name"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caslte light/"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="#FBBE02"
                    android:textStyle="bold"
                    android:id="@+id/product_sku"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330 mL"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:id="@+id/qnty_view_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:minWidth="120dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                >

                <Button
                    android:textSize="18sp"
                    android:id="@+id/quantity_view_remove"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/solid_circle_grey"
                    android:maxWidth="10dp"
                    android:text="-"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <EditText
                       android:gravity="center"
                        android:text="1"
                        android:background="@color/white"
                        android:minWidth="80dp"
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:inputType="number"
                        android:textSize="27dp" />

                </LinearLayout>

                <Button
                    android:textSize="18sp"
                    android:id="@+id/quantity_view_add"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/solid_circle_grey"
                    android:text="+"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="0dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_to_cart_btn"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_add_white_24dp"
                    android:text="Weka kwenye kikapu"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_corners_blue"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
