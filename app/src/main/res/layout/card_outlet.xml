<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/round_corners_with_grey_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/img_wrapper"
            android:padding="0dp"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:padding="18dp"
                android:background="@drawable/round_corners_white"
                android:src="@drawable/ic_outlet_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/img_wrapper"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project name"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/client_name"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="client"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/location"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"/>
    </RelativeLayout>

</LinearLayout>



